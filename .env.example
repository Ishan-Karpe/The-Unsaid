# ===========================================
# THE UNSAID - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ------------------------------------------
# SUPABASE (Frontend + Backend)
# ------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (backend only - NEVER expose to frontend)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ------------------------------------------
# OPENROUTER (Backend AI Processing)
# ------------------------------------------
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Optional: Default model for AI requests
OPENROUTER_DEFAULT_MODEL=anthropic/claude-3-haiku

# ------------------------------------------
# APPLICATION SETTINGS
# ------------------------------------------
# Frontend URL (for CORS)
PUBLIC_APP_URL=http://localhost:5173

# Backend URL
PUBLIC_API_URL=http://localhost:8000

# ------------------------------------------
# ENCRYPTION (Client-side reference)
# ------------------------------------------
# These are informational - actual key derivation happens client-side
# PBKDF2 iterations (higher = more secure but slower)
# Recommended: 100000 for production
PBKDF2_ITERATIONS=100000

# ------------------------------------------
# RATE LIMITING (Backend)
# ------------------------------------------
# AI requests per user per hour
AI_RATE_LIMIT_PER_HOUR=10

# ------------------------------------------
# DEVELOPMENT
# ------------------------------------------
# Set to 'development' or 'production'
NODE_ENV=development
