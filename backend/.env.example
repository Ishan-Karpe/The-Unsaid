# ===========================================
# THE UNSAID BACKEND - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# For Railway deployment, set these in the Railway dashboard

# ------------------------------------------
# REQUIRED: OpenRouter API
# ------------------------------------------
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxx

# ------------------------------------------
# REQUIRED: Supabase Configuration
# ------------------------------------------
# Get these from your Supabase project dashboard:
# Settings > API
PUBLIC_SUPABASE_URL=https://your-project.supabase.co
PRIVATE_SUPABASE_SECRET_KEY=your-service-role-key

# ------------------------------------------
# REQUIRED: Frontend URL (for CORS)
# ------------------------------------------
# Set this to your Vercel frontend URL after deploying
# Example: https://the-unsaid.vercel.app
PUBLIC_APP_URL=http://localhost:5173

# ------------------------------------------
# OPTIONAL: AI Configuration
# ------------------------------------------
# Default model to use (defaults to google/gemini-2.0-flash-exp:free)
OPENROUTER_DEFAULT_MODEL=google/gemini-2.0-flash-exp:free

# Rate limit for AI requests per user per hour (default: 10)
AI_RATE_LIMIT_PER_HOUR=10

# ------------------------------------------
# OPTIONAL: Environment
# ------------------------------------------
# Set to "production" in Railway
NODE_ENV=development
